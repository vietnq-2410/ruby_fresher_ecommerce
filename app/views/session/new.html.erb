<hr class="offset-top">
<h1 class="text-center"><%=t("modals.login")%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password %>
      <%= link_to t("modals.forgot_pass"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox" do %>
        <%= f.check_box :remember_me %>
        <span><%=t("modals.remember_me")%></span>
      <% end %>
      <%= f.submit t("action.login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t("modals.new_user") %> <%= link_to t("modals.registration"), signup_path %></p>
  </div>
</div>
